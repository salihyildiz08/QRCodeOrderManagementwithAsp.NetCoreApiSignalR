<script src="~/lib/microsoft/signalr/dist/browser/signalr.min.js"></script>


<script type="text/javascript">
	$(document).ready(() => {
		var connection = new signalR.HubConnectionBuilder().withUrl("https://localhost:7140/SignalRHub").build();

		$("#connstatus").text(connection.state);

		connection.start().then(() => {
			$("#connstatus").text(connection.state);
			setInterval(() => {
				connection.invoke("SendProgress");
			}, 1000);
		}).catch((err) => { console.log(err) });

		connection.on("ReceiveTotalMoneyCaseAmount", (value) => {
			$("#totalMoneyCaseAmount").text(value);
		});

		connection.on("ReceiveActiveOrderCount", (value1) => {
			$("#activeOrderCount").text(value1);
		});

		connection.on("ReceiveTotaMenulTable", (value2) => {
			$("#totaMenulTable").text(value2);
		});

	});
</script>

