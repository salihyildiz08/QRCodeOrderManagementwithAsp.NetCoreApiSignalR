@model List<ResultProductDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Product</h4>
		<div class="row">
			<div class="col-md-12">

				<div class="card">
					<div class="card-header">
						<div class="card-title">Product List</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							<a href="/Product/CreateProduct" class="btn btn-outline-primary">Add New Product</a>
						</div>
						<div class="table-responsive">
							<table class="table table-bordered">
								<thead>
									<tr>
										<th>#</th>
										<th>Name</th>
										<th>Price</th>
										<th>Category Name</th>
										<th>Status</th>
										<th>Delete</th>
										<th>Edit</th>
									</tr>
								</thead>
								<tbody>
									@foreach (var item in Model)
									{
										<tr>
											<td>@item.ProductID</td>
											<td>@item.ProductName</td>
											<td>@item.Price</td>
											<td>@item.CategoryName</td>
											<td>@item.ProductStatus</td>
											<td><a href="/Product/DeleteProduct/@item.ProductID" class="btn btn-outline-danger btn-rounded">Delete</a></td>
											<td><a href="/Product/UpdateProduct/@item.ProductID" class="btn btn-outline-success btn-rounded">Edit</a></td>
										</tr>
									}
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>

		</div>
	</div>
</div>


