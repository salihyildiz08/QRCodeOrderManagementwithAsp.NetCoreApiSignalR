@model CreateTestimonialDto
@{
    ViewData["Title"] = "CreateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Add New Testimonial</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Add New Testimonial</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Name">Name</label>
                                <input type="text" class="form-control" asp-for="Name" placeholder="Name">
                            </div>

                            <div class="form-group">
                                <label for="Title">Title</label>
                                <input type="text" class="form-control" asp-for="Title" placeholder="Title">
                            </div>

                            <div class="form-group">
                                <label for="Comment">Comment</label>
                                <input type="text" class="form-control" asp-for="Comment" placeholder="Comment">
                            </div>

                            <div class="form-group">
                                <label for="ImageUrl">ImageUrl</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" placeholder="ImageUrl">
                            </div>

                            
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Add Testimonial</button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
