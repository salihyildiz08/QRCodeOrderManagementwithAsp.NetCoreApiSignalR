@model List<ResultDiscountDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Discount</h4>
		<div class="row">
			<div class="col-md-12">

				<div class="card">
					<div class="card-header">
						<div class="card-title">Discount List</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							<a href="/Discount/CreateDiscount" class="btn btn-outline-primary">Add New Discount</a>
						</div>
						<div class="table-responsive">
							<table class="table table-bordered">
								<thead>
									<tr>
										<th>#</th>
										<th>Title</th>
										<th>Amount</th>
										<th>Description</th>
										<th>ImageUrl</th>
										<th>Delete</th>
										<th>Edit</th>
									</tr>
								</thead>
								<tbody>
									@foreach (var item in Model)
									{
										count++;
										<tr>
											<td>@count</td>
											<td>@item.Title</td>
											<td>@item.Amount</td>
											<td>@item.Description</td>
											<td>@item.ImageUrl</td>
											<td><a href="/Discount/DeleteDiscount/@item.DiscountID" class="btn btn-outline-danger">Delete</a></td>
											<td><a href="/Discount/UpdateDiscount/@item.DiscountID" class="btn btn-outline-success">Edit</a></td>
										</tr>
									}
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>

		</div>
	</div>
</div>
