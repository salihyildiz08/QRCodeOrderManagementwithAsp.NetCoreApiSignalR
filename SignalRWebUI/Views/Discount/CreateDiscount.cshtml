@model CreateDiscountDto
@{
    ViewData["Title"] = "CreateDiscount";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Add New Discount</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Add New Discount</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Title">Title</label>
                                <input type="text" class="form-control" asp-for="Title" placeholder="Title">
                            </div>

                            <div class="form-group">
                                <label for="Amount">Amount</label>
                                <input type="text" class="form-control" asp-for="Amount" placeholder="Amount">
                            </div>

                            <div class="form-group">
                                <label for="Description">Description</label>
                                <input type="text" class="form-control" asp-for="Description" placeholder="Description">
                            </div>

                            <div class="form-group">
                                <label for="ImageUrl">ImageUrl</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" placeholder="ImageUrl">
                            </div>
                            <div class="form-group">
                                <label for="Status">Status</label>
                                <select asp-for="Status" class="form-control">
                                    <option value="true" >Aktif</option>
                                    <option value="false">Pasif</option>
                                </select>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Add Discount</button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

