@model UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Update About</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Update About</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Aboutname">Title</label>
                                <input type="text" class="form-control" asp-for="Title">
                                <input type="hidden" class="form-control" asp-for="AboutID">
                            </div>

                            <div class="form-group">
                                <label for="Description">Description</label>
                                <input type="text" class="form-control" asp-for="Description">
                            </div>

                            <div class="form-group">
                                <label for="ImageUrl">ImageUrl</label>
                                <input type="text" class="form-control" asp-for="ImageUrl">
                            </div>

                           

                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Update About</button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

